# Database Configuration
# For local development
DB_USER=postgres
DB_HOST=localhost
DB_NAME=aibootcamp
DB_PASSWORD=postgres
DB_PORT=5432

# Or use a connection string
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aibootcamp

# For production with Vercel Postgres
# DATABASE_URL=postgres://default:password@host:port/verceldb?sslmode=require

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Email service (optional)
# EMAIL_SERVER=smtp://username:password@smtp.example.com:587
# EMAIL_FROM=noreply@aibootcamp.com

# Node environment
NODE_ENV=development
