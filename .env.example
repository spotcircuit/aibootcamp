# Database Configuration
# For local development
DB_USER=postgres
DB_HOST=localhost
DB_NAME=aibootcamp
DB_PASSWORD=postgres
DB_PORT=5432

# Or use a connection string
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aibootcamp

# For production with Vercel Postgres
# DATABASE_URL=postgres://default:password@host:port/verceldb?sslmode=require

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Storage URLs
NEXT_PUBLIC_SUPABASE_STORAGE_URL=your_supabase_url/storage/v1/object/public
NEXT_PUBLIC_INSTRUCTOR_IMAGE_URL=your_supabase_url/storage/v1/object/public/images/instructors/mike-wolford.jpg

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PRODUCT_ID=your_stripe_product_id
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Email service (optional)
# EMAIL_SERVER=smtp://username:password@smtp.example.com:587
# EMAIL_FROM=noreply@aibootcamp.com

# Node environment
NODE_ENV=development
